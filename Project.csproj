	  </MauiXaml>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Platforms\NewFolder\" />
	</ItemGroup>

	<ProjectExtensions>
		<VisualStudio>
			<UserProperties XamarinHotReloadDebuggerTimeoutExceptionProjectHideInfoBar="True" />
		</VisualStudio>
	</ProjectExtensions>

	

</Project>
