<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Views.ListaRecordatorio">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Recordatorios}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Image Source="{Binding RutaArchivo, Converter={StaticResource Base64ToImageConverter}}" />
                            <Label Text="{Binding Description}" FontAttributes="Bold" />
                            <Label Text="{Binding ReminderDate, StringFormat='Fecha de Recordatorio: {0:g}'}" />
                            <Label Text="{Binding TipoRecordatorio, StringFormat='Tipo de Recordatorio: {0}'}" />
                            <Label Text="{Binding CreateDate, StringFormat='Fecha de CreaciÃ³n: {0:g}'}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
