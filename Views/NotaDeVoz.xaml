<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Views.NotaDeVoz">

    <VerticalStackLayout>

        <Button x:Name="Grabar" Text="Grabar" Clicked="Grabar_Clicked" TranslationY="40" HorizontalOptions="FillAndExpand"/>
        <Button x:Name="Stop" Text="Stop" Clicked="Stop_Clicked" TranslationY="50" HorizontalOptions="FillAndExpand"/>
        <Button x:Name="rep" Text="Reproducir" TranslationY="60"  Clicked="rep_Clicked"  HorizontalOptions="FillAndExpand"/>


        <DatePicker x:Name="Recuerdo" TranslationY="80" HorizontalOptions="Fill" BackgroundColor="Cyan" 
                 TextColor="Black" />

        <Button x:Name="GDatos" Text="Guardar" Clicked="GDatos_Clicked"  TranslationY="100" HorizontalOptions="FillAndExpand"/>

    </VerticalStackLayout>
</ContentPage>