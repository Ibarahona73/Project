<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Views.NotaTexto">

    <VerticalStackLayout>
        <Label Text="Contenido de la Nota:" />
        <Entry x:Name="ContenidoEntry" Placeholder="Ingrese el contenido de la nota" />

        <Label Text="Fecha de Recordatorio:" />
        <DatePicker x:Name="ReminderDatePicker" />

        

        <Button Text="Crear Nota de Texto" Clicked="CrearNota_Clicked" />
    </VerticalStackLayout>
</ContentPage>