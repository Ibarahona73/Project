<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Views.RestableceContra"
             Title="RestableceContra">

    <!--Cambio De Contrase単a-->
    <!--parte 3/3 para reponer Contrase単a-->
    
    <VerticalStackLayout>
        

        <Entry x:Name="NewPass" Placeholder="Ingrese Su Nueva Contrase単a" Keyboard="Text"
                  VerticalOptions="Center"
                  HorizontalOptions="Fill"
                  HorizontalTextAlignment="Center"
                  TranslationY="10"
                  FontSize="16"/>


        <Entry x:Name="ConfirmPass" Placeholder="Confirme La Contrase単a" Keyboard="Text" 
                    VerticalOptions="Center"
                     HorizontalOptions="Fill"
                     HorizontalTextAlignment="Center"
                     TranslationY="16"
                     FontSize="16"/>

        <Button 
            x:Name="BtnEnv" 
            TranslationY="45"
            Text="Enviar"
            FontSize="15"
            Clicked="BtnEnv_Clicked"/>

    </VerticalStackLayout>
</ContentPage>